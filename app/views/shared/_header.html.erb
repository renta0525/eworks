<%# CSS・・・assets/stylesheets/shared/header.css %>
<div class='page-header'>
  <div class='main-header'>
    <div class='header-title'>
      <%= link_to 'Eworks', "/", class: "eworks-icon" %>
    </div>
    <ul class='list'>
      <% if user_signed_in? %>
        <li><%= link_to current_user.nickname, edit_user_path(current_user), class: "user-nickname" %></li>
        <li><%= link_to '日報', reports_path, class: "repors_index" %></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, data: {turbo_method: :delete}, class: "logout" %></li>
      <%  else %>
        <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
        <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
      <% end %>
    </ul>
    </div>
  </div>
</div>